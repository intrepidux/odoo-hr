<odoo>
    <record id="view_message_wizard_form" model="ir.ui.view">
        <field name="name">message.wizard.form</field> 
        <field name="model">message.wizard</field> 
        <field name="arch" type="xml">
            <form string="Message Wizard" class="wizard-form"> 
            <div>                  
                <group class="wizard-form">
                    <div style="margin-left: 50px">
                        <field name="image" widget="image" options="{'upload_button': False}" readonly="1" nolabel="1" style="margin-right:10px; margin-top:40px"/>
                    </div>
                        <div style="margin-top: 20px; margin-left: -250px !important">
                            <h3><field name="text1" readonly="1" nolabel="1"/></h3><br/>
                            <field name="text2" readonly="1" nolabel="1"/><br/>
                            <field name="text3" readonly="1" nolabel="1"/><br/>
                            <field name="text5" readonly="1" nolabel="1"/><br/><br/>
                            <strong><field name="text4" readonly="1" nolabel="1"/></strong><br/>
                            <field name="authors" readonly="1" nolabel="1"/>
                        </div>
                </group>
                <footer>
                    <button name="action_ok" string="OK" type="object" class="btn-success" style="margin-left:10px; margin-top:5px"/>
                </footer>
            </div>
            </form>
        </field>
    </record>

    <record id="message_wizard_action" model="ir.actions.act_window">
        <field name="name">VÃ¤lkommen till HR_Lunch!</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">message.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_message_wizard_form"></field> 
        <field name="target">new</field>
    </record>
</odoo>
